[Unit]
Description=Proxy
After=syncthing.service
Requires=syncthing.service

[Service]
ExecStartPre=-/usr/bin/docker rm -f proxy
ExecStart=/usr/bin/docker run \
	--link syncthing:syncthing \
	-p 80:80 \
	-v %h/.config/nginx/default.conf:/etc/nginx/conf.d/default.conf \
	-v %h/Web:/usr/share/nginx/html:ro \
	--rm --name=proxy nginx
ExecStop=/usr/bin/docker stop proxy

[Install]
WantedBy=default.target
